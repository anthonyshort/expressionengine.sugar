	<action id="com.anthonyshort.TextActions.EETagDocumentation" category="actions.text.EE/actions.tag">
        <class>TEALoader</class>
        <title>Documentation for tag</title>
        <key-equivalent>control cmd e</key-equivalent>
        <setup>
            <script>tag_documentation.rb</script>
            <input>selection</input>
            <alternate>line</alternate>
            <output>text</output>
            <undo_name>Documentation for tag</undo_name>
            <syntax-context>text.html.ee, text.html.ee * </syntax-context>
        </setup>
    </action>

	<!-- TEA Actions -->

	<action id="com.onecrayon.TextActions.WrapInSnippet.tag" category="actions.text.EE/actions.tag">
		<class>TEAforEspresso</class>
		<title>Wrap Selection In EE Tag</title>
		<key-equivalent>control E</key-equivalent>
		<setup>
			<action>selections_to_snippets</action>
			<options>
				<dict>
				
					<key>first_snippet</key>
					<string>{${1:exp:}}$SELECTED_TEXT{/${1/\s.*//}}$0</string>
					
					<key>undo_name</key>
         			 <string>Wrap Selection In EE Tag</string>
					
				</dict>				
			</options>
		</setup>
	</action>
	
	<action id="com.onecrayon.TextActions.WrapLinesInSnippet.tag" category="actions.text.EE/actions.tag">
		<class>TEAforEspresso</class>
		<title>Wrap Selected Lines In EE Tag</title>
		<key-equivalent>cmd control E</key-equivalent>
		<setup>
			<action>selected_lines_to_snippets</action>
			<options>
				<dict>
				
					<key>first_snippet</key>
					<string>{${1:tag}}$SELECTED_TEXT{/${1/\s.*//}}</string>
					
					<key>following_snippet</key>
					<string>{$1}$SELECTED_TEXT{/${1/\s.*//}}</string>
					
					<key>final_append</key>
					<string>$0</string>
					
					<key>undo_name</key>
					<string>Wrap Selected Lines In Tag</string>

				</dict>
			</options>
		</setup>
	</action>

</action-recipes>

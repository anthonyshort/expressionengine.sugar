<?xml version="1.0"?>
<action-recipes>
		
	<!-- Single Tags -->
	
	<snippet id="com.macrabbit.TextActions.EE.embed" category="actions.text.EE/tools.Snippets.single">
		<title>Embed</title>
		<text><![CDATA[{embed="$1" ${2:my_weblog}="${3:plants}"}]]></text>
		<text-trigger>embed</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.encode" category="actions.text.EE/tools.Snippets.single">
		<title>Encode</title>
		<text><![CDATA[{encode="${1:you@yoursite.com}" title="${2:Email Address}"}]]></text>
		<text-trigger>encode</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.variable" category="actions.text.EE/tools.Snippets.single">
		<title>Assign Variable</title>
		<text><![CDATA[{assign_variable:${1:variable_name}="${2:value}"}$3]]></text>
		<text-trigger>var</text-trigger>
		<syntax-context>ee, ee *, html</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.path" category="actions.text.EE/tools.Snippets.single">
		<title>Path</title>
		<text><![CDATA[{path="${1:template_group}/${2:template}"}$3]]></text>
		<text-trigger>path</text-trigger>
		<syntax-context>ee.html, html, html *, ee.tag, ee.tag *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.segment" category="actions.text.EE/tools.Snippets.single">
		<title>Segment</title>
		<text><![CDATA[{segment_${1:1}}]]></text>
		<text-trigger>seg</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.switch" category="actions.text.EE/tools.Snippets.single">
		<title>Switch</title>
		<text><![CDATA[{switch="${1:resultOne}|${2:resultTwo}"}]]></text>
		<text-trigger>switch</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	

	<!-- Misc -->
	
	<snippet id="com.macrabbit.TextActions.EE.attribute" category="actions.text.EE/tools.Snippets.misc">
		<title>Attribute</title>
		<text><![CDATA[${2:attribute}="${3:value}"]]></text>
		<text-trigger>att</text-trigger>
		<syntax-context>ee.tag, ee.tag end</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.stylesheet" category="actions.text.EE/tools.Snippets.misc">
		<title>Stylesheet</title>
		<text><![CDATA[<link rel="stylesheet" type="text/css" media="${1:screen}" href="{stylesheet=${2:weblog}/${3:weblog_css}}">]]></text>
		<text-trigger>style</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<!-- Conditionals -->
	
	<snippet id="com.macrabbit.TextActions.EE.conditional.if" category="actions.text.EE/tools.Snippets.conditionals">
		<title>if</title>
		<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{/if}]]></text>
		<text-trigger>if</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.conditional.else" category="actions.text.EE/tools.Snippets.conditionals">
		<title>if:else</title>
		<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{if:else}$5{/if}]]></text>
		<text-trigger>ifelse</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.conditional.elseif" category="actions.text.EE/tools.Snippets.conditionals">
		<title>if:elseif</title>
		<text><![CDATA[{if ${2:variable}=="${3:value}"}$4{if:elseif ${5:variable}=="${6:value}"}$7{/if}]]></text>
		<text-trigger>ifelseif</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<!-- Tag Pairs -->
	
	<snippet id="com.macrabbit.TextActions.EE.tagpair" category="actions.text.EE/tools.Snippets.pair">

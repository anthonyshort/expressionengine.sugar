		<text><![CDATA[{${1:tag_pair}}{/$1}]]></text>
		<text-trigger>tag</text-trigger>
		<syntax-context>ee, ee *</syntax-context>
	</snippet>
	
	<snippet id="com.macrabbit.TextActions.EE.expplugin" category="actions.text.EE/tools.Snippets.pair">
		<title>exp:plugin</title>
		<text><![CDATA[{exp:${1:plugin} ${2:parameters}}$3{/exp:$1}]]></text>
		<text-trigger>exp</text-trigger>
		<syntax-context>ee, ee *, html</syntax-context>
	</snippet>


<?xml version="1.0" encoding="UTF-8"?>
<itemizer>
	
	<recipe name="built-in.ee.tag.collection">
		<class>ESXHTMLItem</class>
		<start-selector>ee.tag.open:has-child(name:capture(name))</start-selector>
		<end-selector>ee.tag.close:has-child(name[text == $name.text])</end-selector>
		<subrecipes>
			<include-root-recipes/>
		</subrecipes>
	</recipe>
	
	<recipe name="built-in.ee.tag.processing-instruction">
		<selector>processing-instruction.ee:has-child(entity:capture(name))</selector>
		<class>ESXMLItem</class>
	</recipe>
	
	<recipe name="built-in.self-closing-tag">
		<selector>ee.tag.self-closing:has-child(name:capture(name))</selector>
		<class>ESXHTMLItem</class>
	</recipe>

</itemizer>

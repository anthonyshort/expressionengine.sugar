<?xml version="1.0" encoding="UTF-8"?>

<injections>

	<injection name="injections.ee.tag" selector="built-in.tag.collection" action="insert-after-children">
		<recipe name="tag-pair">
			<start-selector>ee.tag.open:has-child(name:capture(name))</start-selector>
			<end-selector>ee.tag.close:has-child(name[text == ${name}])</end-selector>
			<subrecipes>
				<include-root-recipes/>
			</subrecipes>
			<class>ESXHTMLItem</class>
		</recipe>
		
		<recipe name="conditional">
			<start-selector>ee.tag.open.conditional</start-selector>
			<end-selector>ee.tag.close</end-selector>
			<subrecipes>
				<include-root-recipes/>
			</subrecipes>
			<class>ESXHTMLItem</class>
		</recipe>
		
	</injection>
	
</injections>